[alias]
  br = !git branch | fzf +m | awk '{print $1}' | xargs git checkout
  fixup = !git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup
  pb = !git log --pretty=format:'%D' HEAD^ | grep 'origin/' | head -n1 | sed 's@origin/@@' | sed 's@,.*@@'
  rb = !current_branch=$(git rev-parse --abbrev-ref HEAD) && git checkout master && git pull && git checkout $current_branch && git rebase master
  rbi = !current_branch=$(git rev-parse --abbrev-ref HEAD) && git checkout master && git pull && git checkout $current_branch && git rebase master -i
  rl= reset --soft HEAD~1
  unstage = reset HEAD --
[init]
  defaultBranch = main
[core]
  autocrlf = input
  editor = code --wait
  excludesfile = ~/.gitignore_global
  untrackedCache = true
[help]
  autocorrect = true
[pull]
  rebase = true
[push]
	autoSetupRemote = true
[rebase]
  autoStash = true
  autoSquash = true
[user]
  name = Alex Platteeuw
  email = alexplatteeuw@gmail.com
	signingkey = ~/.ssh/id_ed25519.pub
[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
